#!/bin/bash
set -e

DIR=~/.popcorntime
DESTINATION_DIR=/home/$(whoami)/.local/share/applications
DESKTOP_FILE=$DESTINATION_DIR/popcorn-time.desktop

case $1 in
	"")
		cd "$DIR" || echo "Popcorn Time directory does not exist."
		./Popcorn-Time|| echo "Popcorn Time launcher does not exist.";;
	-u|--uninstall)
		sudo rm -rf /usr/bin/popcorntime ~/.popcorntime 
		if [ -e "$DESKTOP_FILE" ]; then
			rm "$DESKTOP_FILE"
		fi
		echo -e "Done uninstalling\\n";;
	-h|--help)
		;;
esac
